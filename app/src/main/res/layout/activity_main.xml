<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anthony.marco.doodlejump.MainActivity">

    <com.anthony.marco.doodlejump.DoodleSurfaceView
        android:id="@+id/doodle_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/game_buttons"
        layout="@layout/game_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        android:id="@+id/main_menu_buttons"
        layout="@layout/main_menu_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
